{
  "name": "merchant-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "serve": "node dist/index.js",
    "typeorm": "ts-node -r dotenv/config -r tsconfig-paths/register -r ts-node/register ./node_modules/typeorm/cli.js --config ./src/conf/ormconfig",
    "db:migration:generate": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:generate -d src/conf/ormconfig.ts",
    "db:migration:run": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:run -d src/conf/ormconfig.ts",
    "db:migration:revert": "ts-node -r dotenv/config -r tsconfig-paths/register node_modules/typeorm/cli.js --config ./src/conf/ormconfig migration:revert",
    "db:seed": "ts-node -r dotenv/config -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js --configName ./src/conf/ormconfig seed"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/McTavish420/Merchant-backend.git"
  },
  "keywords": [],
